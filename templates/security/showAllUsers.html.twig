{% extends 'layout.html.twig' %}

{% block title %} {{ parent() }} - Les utilisateurs {% endblock %}

{% block content %}

    <table class="table thead-dark">
        <thead class="thead-dark">
            <tr>
                <th>Nom</th>
                <th>Pr√©nom</th>
                <th>Email</th>
                <th>Role</th>
            {% if is_granted('ROLE_ADMIN') %}
                <th>Action</th>
            {% endif %}
            </tr>
        </thead>
        
        <tbody>
        {% for user in users %}
            <tr>
                <td>
                    <a href=" ">{{ user.nom }}</a>
                </td>
                <td>
                    {{ user.prenom }}
                </td>
                <td>
                    {{ user.email }}
                </td>
                <td>
                  {# {% for role in user.roles %}
                    {{ role }}
                  {% endfor %} #}
                  {{ user.roles | join(', ') }}
                </td>
            {% if is_granted('ROLE_ADMIN') %}
                <td>
                    <a href=" {{ path('app_deleteuser', {'id': user.id}) }} " onclick="return confirm('Are you sure you want to delete?')">
                        Supprimer
                    </a>
                    |
                    <a href=" {{ path('app_promotetoadmin', {'id': user.id}) }} ">
                        Promouvoir admin
                    </a>
                    |
                    <a href=" {{ path('app_removeadminrole', {id: user.id}) }} ">Retirer le role admin</a>
                </td>
            {% endif %}
            </tr>
        {% endfor %}
        </tbody>
    </table>

{% endblock %}

