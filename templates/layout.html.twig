{% extends "base.html.twig" %}

{% block title %}  {% endblock %}

{% block body %}

  <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
    <div class="container-fluid">
      <a class="navbar-brand" href=" {{ path('index') }} ">Blog</a>
      <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNavDropdown" aria-controls="navbarNavDropdown" aria-expanded="false" aria-label="Toggle navigation">
        <span class="navbar-toggler-icon"></span>
      </button>
      <div class="collapse navbar-collapse" id="navbarNavDropdown">
        <ul class="navbar-nav">
        {% if is_granted('ROLE_ADMIN') %}
          <li class="nav-item">
            <a class="nav-link" href=" {{ path('app_showallusers') }} ">Les utilisateurs</a>
          </li>
          <li class="nav-item">
            <a class="nav-link" href=" {{ path('monblog_articles_showall') }} ">Les articles</a>
          </li>
          <li class="nav-item">
            <a class="nav-link" href=" {{ path('monblog_auteurs_showall') }} ">Les auteurs</a>
          </li>
        </ul>
        {% endif %}
        {% if is_granted('IS_AUTHENTICATED_FULLY') %}
          <div class="collapse navbar-collapse flex-grow-1 text-right" id="myNavbar7">
            <ul class="navbar-nav ml-auto flex-nowrap">
              <li class="nav-item">
                <a class="nav-link" aria-current="page" href=" {{ path('app_logout')}} ">Se déconnecter</a>
              </li>
        {% else %}
              <li class="nav-item ml-auto">
                <a class="nav-link" href="{{path('app_login') }}">Se connecter</a>
              </li>
              <li class="nav-item">
                <a class="nav-link ml-auto" href="{{ path('app_register') }}">Créer un compte</a>
              </li>
            </ul>
          </div>
        {% endif %}
      </div>
    </div>
  </nav>

  <header>
    <img src=" {{ asset('image/footer2.jpg')}} " style="" alt="rust-texture">
    <h1>
      <a href=" {{ path('index') }}">
        {% if is_granted('IS_AUTHENTICATED_FULLY') %}
          <p style="line-height:100px;">Bonjour {{app.user.nom}} {{app.user.prenom}} </p>
        {% else %}
          <p style="line-height:100px;">Bienvenue :) </p>
        {% endif %}
      </a>
    </h1>
  </header>

  <main>
    {% block content %}

    {% endblock %}
  </main>

  <footer>
    <img src="{{ asset('image/footer2.jpg')}} " alt="footer rust-texture">
    <nav class="row">
      <div class="col-sm-12 col-md-6 col-lg-3">
        <p><a href=" {{ path('monblog_quisommesnous') }} ">Qui sommes nous?</a></p>
        <p><a href="{{ path('monblog_cgv') }} ">CGV</a></p>
        <p><a href="{{ path('monblog_contact') }}">Nous contacter</a></p>
      </div>
      <div class="col-sm-12 col-md-6 col-lg-3">
        <p><a href="{{ path('monblog_values') }}">Nos valeurs</a></p>
        <p><a href="{{ path('monblog_becomebloggueur') }}">Devenir bloggeur</a></p>
        <p><a href="{{ path('monblog_jointeam') }}">Rejoindre l'équipe</a></p>
      </div>
    </nav>

    <div class="copyright">
      <p>&copy; copyright</p>
    </div>
  </footer>
{% endblock %} 